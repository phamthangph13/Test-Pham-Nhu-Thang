@model ProductManagementMVC.Models.Product

@{
    ViewData["Title"] = "Delete Product";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card shadow-sm border-danger">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0"><i class="bi bi-exclamation-triangle me-2"></i>Confirm Delete</h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <i class="bi bi-exclamation-circle me-2"></i>
                        Are you sure you want to delete this product? This action cannot be undone.
                    </div>
                    
                    <div class="row mb-3">
                        <div class="col-md-4 fw-bold">Product ID:</div>
                        <div class="col-md-8">@Model.ProductId</div>
                    </div>
                    
                    <div class="row mb-3">
                        <div class="col-md-4 fw-bold">Product Name:</div>
                        <div class="col-md-8">@Model.ProductName</div>
                    </div>
                    
                    <div class="row mb-3">
                        <div class="col-md-4 fw-bold">Quantity:</div>
                        <div class="col-md-8">@Model.Quantity</div>
                    </div>
                    
                    <div class="row mb-3">
                        <div class="col-md-4 fw-bold">Notes:</div>
                        <div class="col-md-8">@(string.IsNullOrEmpty(Model.Notes) ? "-" : Model.Notes)</div>
                    </div>
                    
                    <form asp-action="Delete" class="mt-4">
                        <input type="hidden" asp-for="ProductId" />
                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left me-1"></i> Back to List
                            </a>
                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-trash me-1"></i> Delete
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>